# Menu item in the DrawerList list.
<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<Separator@Widget>:

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size


<ContentNavigationDrawer>:

    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    Image:
        source:'bambini1.jpeg'
        size_hint: None, None
        width: self.parent.parent.width


    MDLabel:
        text: "Giovanna's Recipes"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]
        halign: "center"

    MDLabel:
        text: "giovanna.pink@libero.it"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]
        halign:"center"

    Separator:
        size_hint_y: None
        height: dp(5)

    MDLabel:
        text: "Categories"
        font_style: "Button"
        font_size: dp(20)
        size_hint_y: None
        valign:'bottom'
        height: self.texture_size[1]


    ScrollView:
        DrawerList:
            id: md_list
            ItemDrawer:
                icon: 'fruit-pineapple'
                text:'6-8 months'
                on_release: app.root.ids.manager.current ='primo'
                on_release: app.root.ids.nav_drawer.toggle_nav_drawer()

            ItemDrawer:
                icon: 'fruit-grapes'
                text:'9-11 months'
            ItemDrawer:
                icon: 'fruit-watermelon'
                text:'12-15 months'
            ItemDrawer:
                icon: 'fruit-pineapple'
                text:'16-24 months'



<Primo@Screen>
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            md_bg_color :  70/255,130/255,180/255,1
            title: "Giovanna"
            elevation: 10
            left_action_items: [['menu', lambda x: app.root.ids.nav_drawer.toggle_nav_drawer()]]

        ScrollView:
            GridLayout:
                padding:dp(20),dp(10)
                orientation: 'vertical'
                height: self.minimum_height
                size_hint_y: None
                row_default_height: self.parent.parent.height*2
                cols:1

                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(30)
                    Label:
                        size_hint: None, .06
                        width: self.parent.width
                        text:'6-8 Months'
                        color: 70/255,130/255,180/255,1
                        halign: 'center'
                        font_size: self.width/13

                    MDSeparator:
                    FoodItem:
                        bg:'marmelata.jpg'
                        text: 'marmelata'
                        callback: lambda: self.show_example_custom_bottom_sheet(self.text)
                    FoodItem:
                        bg: 'mela.jpg'
                        text: 'pudino'
                        callback: lambda: self.show_example_custom_bottom_sheet(self.text)
                    FoodItem:
                        bg: 'banana.jpg'
                        text: 'banana'
                        callback: lambda: self.show_example_custom_bottom_sheet(self.text)


                    Label:
                        size_hint: 1, .06
                        halign: 'center'
                        text: 'Visualize more recipes'
                        underline: True
                        color: 0,0,0,1

                    BoxLayout:







Screen:

    NavigationLayout:

        ScreenManager:
            id:manager

            Screen:
                name: 'second'

                BoxLayout:
                    orientation: 'vertical'
                    canvas:
                        Color:
                            rgb: 1, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.width,self.height
                            source: 'bambini.jpg'

                    MDToolbar:
                        md_bg_color :  70/255,130/255,180/255,1
                        title: "Giovanna"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]

                    GridLayout:
                        size_hint: 1,1
                        cols: 1

                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: 2*self.parent.height/3
                            spacing: dp(30)
                            MDTextFieldRound:
                                hint_text: 'looking for a recipe?'
                                size_hint: None, None
                                pos_hint:{'center_x':.5,}
                                width: 3*(self.parent.width/4)
                                icon_right: "food-fork-drink"
                                icon_left: 'food'

                            MDRoundFlatButton:
                                text: "search"
                                text_color: 1,1,1,1
                                size_hint: None, None
                                pos_hint:{'center_x':.5,}
                                md_bg_color: 70/255,130/255,180/255,1



                    BoxLayout:
                        size_hint: 1,.2
                        padding: dp(30),dp(10)
                        Button:
                            font_size: self.width/14
                            text: 'Subscribe'
                            opacity: .7
                            background_color: 70/255,130/255,180/255,1

            Primo:
                name: 'primo'




        MDNavigationDrawer:
            id: nav_drawer


            ContentNavigationDrawer:
                id: content_drawer