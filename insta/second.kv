
<Hashplot>:
    canvas:
        Color:
            rgba:utils.get_color_from_hex("#293149")
        Rectangle:
            pos: self.pos
            size: self.size
    orientation:'vertical'
    padding: dp(15)
    Label:
        size_hint: 1,.08
        text: 'Hashtags'
    BoxLayout:
        spacing:dp(20)
        padding:dp(5)
        canvas:
            Color:
                rgba:utils.get_color_from_hex("#4c4c4c")
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            id: lab
            size_hint: .05,1
        BoxLayout:
            id: labval
            spacing: dp(5)
            orientation: 'vertical'
            canvas:
                Color:
                    rgba:utils.get_color_from_hex("#2c4c4c")
                Rectangle:
                    pos: self.pos
                    size: self.size

<Hashbar>
    val1: 10
    val2: 20
    t:'Like'
    canvas:
        Color:
            rgba:utils.get_color_from_hex("#102549")
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_x:None
    Label:
        text: self.parent.t
        font_size: sp(12)


<EnBox>
    tt:'0%'
    padding: dp(10)
    canvas:
        Color:
            rgba:0.4,0,0,0.4
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding:dp(0),dp(40)
        orientation:'vertical'
        canvas:
            Color:
                rgba:0,0,0,0.8
            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            source: 'trophy.png'

        Label:
            text: 'Engagement Rate'
            font_size: self.parent.width/10
        Label:
            text: self.parent.parent.tt
            font_size: self.parent.width/5
            halign:'center'


<ImBox>
    padding:dp(10)
    ss:'logo.png'
    canvas:
        Color:
            rgba:0,0,0,0.7
        Rectangle:
            pos: self.pos
            size: self.size
    AsyncImage:
        source: self.parent.ss


<DownloadButton>:
    text: "Download file"
    icon: "download"
    pos_hint: {"center_x": 0.5,}
    on_release: self.download()

<MostBox>
    orientation: 'vertical'
    padding: dp(10)
    ss: 'logo.png'
    likes:0
    spacing: dp(10)
    canvas:
        Color:
            rgba:0,0,0,0.6
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        color:utils.get_color_from_hex("#FFD700")
        font_size: self.parent.width/10
        text: 'Most Liked Post'
        size_hint:1,.15
    BoxLayout:
        AsyncImage:
            source: self.parent.parent.ss
            allow_stretch: True
        BoxLayout:
            padding:dp(5),dp(20)
            orientation:'vertical'
            Label:
                markup: True
                halign:'center'
                pos_hint:{"top":.6,}
                text: '[b]Likes[/b]'+'\n'+str(self.parent.parent.parent.likes)
            Label:
                markup: True
                id: list
                halign:'center'
                text: '[b]Hashtags[/b]'


