
<Hashplot>:
    canvas:
        Color:
            rgba:utils.get_color_from_hex("#293149")
        Rectangle:
            pos: self.pos
            size: self.size
    orientation:'vertical'
    padding: dp(15)
    Label:
        size_hint: 1,.08
        text: 'Hashtags'
    BoxLayout:
        spacing:dp(20)
        padding:dp(5)
        canvas:
            Color:
                rgba:utils.get_color_from_hex("#4c4c4c")
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            id: lab
            size_hint: .05,1
        BoxLayout:
            id: labval
            spacing: dp(5)
            orientation: 'vertical'
            canvas:
                Color:
                    rgba:utils.get_color_from_hex("#2c4c4c")
                Rectangle:
                    pos: self.pos
                    size: self.size

<Hashbar>
    val1: 10
    val2: 20
    t:'Like'
    canvas:
        Color:
            rgba:utils.get_color_from_hex("#102549")
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_x:None
    Label:
        text: self.parent.t
        font_size: sp(12)


<EnBox>
    tt:'0%'
    padding: dp(10)
    canvas:
        Color:
            rgba:0.4,0,0,0.4
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding:dp(0),dp(40)
        orientation:'vertical'
        canvas:
            Color:
                rgba:0,0,0,0.8
            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            source: 'trophy.png'

        Label:
            text: 'Engagement Rate'
            font_size: self.parent.width/10
        Label:
            text: self.parent.parent.tt
            font_size: self.parent.width/5
            halign:'center'


<ImBox>
    padding:dp(10)
    ss:'logo.png'
    canvas:
        Color:
            rgba:0,0,0,0.7
        Rectangle:
            pos: self.pos
            size: self.size
    AsyncImage:
        source: self.parent.ss


<DownloadButton>:
    text: "Download file"
    icon: "download"
    pos_hint: {"center_x": 0.5,}
    on_release: self.download()

<MostBox>
    orientation: 'vertical'
    padding: dp(10)
    ss: 'logo.png'
    likes:0
    spacing: dp(10)
    canvas:
        Color:
            rgba:0,0,0,0.6
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        color:utils.get_color_from_hex("#FFD700")
        font_size: self.parent.width/10
        text: 'Most Liked Post'
        size_hint:1,.15
    BoxLayout:
        AsyncImage:
            source: self.parent.parent.ss
            allow_stretch: True
        BoxLayout:
            padding:dp(5),dp(20)
            orientation:'vertical'
            Label:
                markup: True
                halign:'center'
                pos_hint:{"top":.6,}
                text: '[b]Likes[/b]'+'\n'+str(self.parent.parent.parent.likes)
            Label:
                markup: True
                id: list
                halign:'center'
                text: '[b]Hashtags[/b]'

<Comparaison>
    BoxLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.width,self.height/1.12
                source: 'inst1.png'

        MDToolbar:
            id: toolbar
            title: 'Instanalytics'
            md_bg_color: utils.get_color_from_hex("#293149")
            pos_hint: {"top":1,}
            size_hint: 1, .12
            left_action_items:
                [["menu", lambda x: app.root.toggle_nav_drawer()]]

    BoxLayout:
        orientation: 'vertical'
        spacing:dp(30)
        padding:dp(45)
        pos_hint:{"top": .85,}
        size_hint: 1,.6

        Image:
            source:"logo.png"

        MDTextFieldRound:
            id: firstp
            hint_text:'first profile'
            size_hint: (.9,.23)
            pos_hint: {"center_x": .5}
            normal_color: [0,0,0,0.6]
            icon_type: "left"
            icon_left:"instlogo.png"

        MDTextFieldRound:
            id: secondp
            hint_text:'second profile'
            size_hint: (.9,.23)
            pos_hint: {"center_x": .5}
            normal_color: [0,0,0,0.6]
            icon_type: "left"
            icon_left:"instlogo.png"

        MDRoundFlatButton:
            text: "Compare"
            text_color: 1,1,1,1
            pos_hint: {"center_x": .5}
            md_bg_color: utils.get_color_from_hex("#293149")
            on_release: self.parent.parent.compare(firstp.text,secondp.text)


    BoxLayout:
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#293149")
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'horizontal'
        pos_hint:{"top":0.1, "left":1}
        size_hint: 1,.1

        Label:
            text: 'Los Fantasticos'


<CompResult>
    BoxLayout:
        MDToolbar:
            id: toolbar
            title: 'Registration'
            md_bg_color: utils.get_color_from_hex("#293149")
            pos_hint: {"top":1,}
            size_hint: 1, .12
            left_action_items:
                [["menu", lambda x: app.root.toggle_nav_drawer()]]


    BoxLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.width/1,self.height/1.12
                source: 'inst1.png'
        orientation: 'horizontal'
        spacing:dp(20)
        padding:dp(30),dp(80)

        BoxLayout:
            orientation:'vertical'
            BoxLayout:
                pos_hint:{"top":1}
                orientation:'vertical'
                size_hint: 1.3,.25
                padding: self.width/7, dp(5)
                Img:
                    id:imp1
                    width: self.parent.width/2
                    size_hint: None,1
                    pos_hint:{"top":1,"center":0.5,}
            Box:
                id: b1

        BoxLayout:
            orientation:'vertical'
            BoxLayout:
                pos_hint:{"top":1}
                orientation:'vertical'
                size_hint: 1.3,.25
                padding: self.width/7, dp(5)
                Img:
                    id:imp2
                    width: self.parent.width/2
                    size_hint: None,1
                    pos_hint:{"top":1,"center":0.5,}
            Box:
                id: b2
                col: 0,0.4,0.3,1

    BoxLayout:
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#293149")
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'horizontal'
        pos_hint:{"top":0.1, "left":1}
        size_hint: 1,.1

        Label:
            text: 'Los Fantasticos'


<Box>
    col: 0,0,0.4,1
    BoxLayout:
        padding:dp(5)
        canvas:
            Color:
                rgba: self.parent.col
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: 0,0,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint:1,.2
                id:nome
                text: "name"
            BoxLayout:
                canvas:
                    Color:
                        rgba: self.parent.parent.parent.col
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint:1,.02
            BoxLayout:
                id: inf
                orientation:'vertical'
                Label:
                    markup: True
                    id: followers
                    halign: 'center'
                Label:
                    markup: True
                    id: followings
                    halign: 'center'
                Label:
                    markup: True
                    id: posts
                    halign: 'center'



